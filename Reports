import React, { useState } from "react";
import { HIDDEN } from "@/api/HIDDENClient";
import { useQuery, useMutation, useQueryClient } from "@tanstack/react-query";
import { Button } from "@/components/ui/button";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import { Tabs, TabsList, TabsTrigger, TabsContent } from "@/components/ui/tabs";
import { AlertCircle, Plus, FileText, Clock, CheckCircle2, XCircle, Shield } from "lucide-react";
import { Skeleton } from "@/components/ui/skeleton";
import { format } from "date-fns";
import ReportForm from "../components/ReportForm";
import {
  Dialog,
  DialogContent,
  DialogHeader,
  DialogTitle,
} from "@/components/ui/dialog";

const reportTypeLabels = {
  safety_concern: "Safety Concern",
  inappropriate_behavior: "Inappropriate Behavior",
  request_issue: "Request Issue",
  responder_feedback: "Responder Feedback",
  technical_problem: "Technical Problem",
  general_feedback: "General Feedback",
  emergency_alert: "Emergency Alert"
};

const severityColors = {
  low: "bg-blue-100 text-blue-700 border-blue-200",
  medium: "bg-yellow-100 text-yellow-700 border-yellow-200",
  high: "bg-orange-100 text-orange-700 border-orange-200",
  critical: "bg-red-100 text-red-700 border-red-200"
};

const statusColors = {
  pending: "bg-slate-100 text-slate-700 border-slate-200",
  under_review: "bg-blue-100 text-blue-700 border-blue-200",
  resolved: "bg-green-100 text-green-700 border-green-200",
  dismissed: "bg-gray-100 text-gray-700 border-gray-200"
};

const statusIcons = {
  pending: Clock,
  under_review: AlertCircle,
  resolved: CheckCircle2,
  dismissed: XCircle
};

export default function Reports() {
  const queryClient = useQueryClient();
  const [showForm, setShowForm] = useState(false);
  const [selectedReport, setSelectedReport] = useState(null);
  const [activeTab, setActiveTab] = useState("my_reports");

  const { data: user } = useQuery({
    queryKey: ['currentUser'],
    queryFn: () => HIDDEN.auth.me(),
  });

  const { data: myReports = [], isLoading: myReportsLoading } = useQuery({
    queryKey: ['myReports', user?.id],
    queryFn: () => HIDDEN.entities.Report.filter({ reporter_id: user.id }, '-created_date'),
    enabled: !!user,
  });

  const { data: allReports = [], isLoading: allReportsLoading } = useQuery({
    queryKey: ['allReports'],
    queryFn: () => HIDDEN.entities.Report.list('-created_date'),
    enabled: !!user && user.role === 'admin',
  });

  const createReportMutation = useMutation({
    mutationFn: (reportData) => {
      return HIDDEN.entities.Report.create({
        ...reportData,
        reporter_id: user.id,
        reporter_name: user.full_name,
        status: 'pending'
      });
    },
    onSuccess: () => {
      queryClient.invalidateQueries({ queryKey: ['myReports'] });
      queryClient.invalidateQueries({ queryKey: ['allReports'] });
      setShowForm(false);
    },
  });

  const updateReportMutation = useMutation({
    mutationFn: ({ reportId, updates }) => {
      return HIDDEN.entities.Report.update(reportId, updates);
    },
    onSuccess: () => {
      queryClient.invalidateQueries({ queryKey: ['allReports'] });
      setSelectedReport(null);
    },
  });

  const ReportCard = ({ report, isAdmin }) => {
    const StatusIcon = statusIcons[report.status];
    
    return (
      <Card
        onClick={() => setSelectedReport(report)}
        className="cursor-pointer hover:shadow-lg transition-all duration-200 border-slate-200"
      >
        <CardHeader className="pb-3">
          <div className="flex items-start justify-between mb-2">
            <div className="flex items-center gap-2 flex-wrap">
              <Badge className={`${severityColors[report.severity]} border font-medium`}>
                {report.severity}
              </Badge>
              <Badge className={`${statusColors[report.status]} border font-medium flex items-center gap-1`}>
                <StatusIcon className="w-3 h-3" />
                {report.status.replace(/_/g, ' ')}
              </Badge>
            </div>
            <span className="text-xs text-slate-500">
              {format(new Date(report.created_date), "MMM d, h:mm a")}
            </span>
          </div>
          <CardTitle className="text-lg">{report.title}</CardTitle>
          <p className="text-sm text-slate-500">{reportTypeLabels[report.report_type]}</p>
        </CardHeader>
        <CardContent>
          <p className="text-sm text-slate-600 line-clamp-2 mb-3">{report.description}</p>
          {isAdmin && (
            <div className="flex items-center gap-2 text-xs text-slate-500">
              <Shield className="w-3 h-3" />
              <span>Reported by: {report.reporter_name}</span>
            </div>
          )}
        </CardContent>
      </Card>
    );
  };

  return (
    <div className="min-h-screen bg-gradient-to-br from-slate-50 to-blue-50 p-6">
      <div className="max-w-6xl mx-auto">
        <div className="flex flex-col md:flex-row justify-between items-start md:items-center mb-8 gap-4">
          <div>
            <h1 className="text-4xl font-bold text-slate-900 mb-2">Reports & Feedback</h1>
            <p className="text-slate-600">Submit concerns or provide feedback to improve community safety</p>
          </div>
          <Button
            onClick={() => setShowForm(true)}
            className="bg-red-600 hover:bg-red-700"
          >
            <Plus className="w-4 h-4 mr-2" />
            New Report
          </Button>
        </div>

        <Tabs value={activeTab} onValueChange={setActiveTab}>
          <TabsList className="mb-6">
            <TabsTrigger value="my_reports">My Reports</TabsTrigger>
            {user?.role === 'admin' && (
              <TabsTrigger value="all_reports">All Reports (Admin)</TabsTrigger>
            )}
          </TabsList>

          <TabsContent value="my_reports">
            {myReportsLoading ? (
              <div className="grid md:grid-cols-2 gap-4">
                {[1, 2, 3, 4].map(i => <Skeleton key={i} className="h-48" />)}
              </div>
            ) : myReports.length > 0 ? (
              <div className="grid md:grid-cols-2 gap-4">
                {myReports.map(report => (
                  <ReportCard key={report.id} report={report} isAdmin={false} />
                ))}
              </div>
            ) : (
              <Card className="p-12 text-center">
                <FileText className="w-12 h-12 text-slate-400 mx-auto mb-3" />
                <p className="text-slate-600 mb-4">You haven't submitted any reports yet</p>
                <Button onClick={() => setShowForm(true)} variant="outline">
                  Submit Your First Report
                </Button>
              </Card>
            )}
          </TabsContent>

          {user?.role === 'admin' && (
            <TabsContent value="all_reports">
              {allReportsLoading ? (
                <div className="grid md:grid-cols-2 gap-4">
                  {[1, 2, 3, 4].map(i => <Skeleton key={i} className="h-48" />)}
                </div>
              ) : allReports.length > 0 ? (
                <div className="grid md:grid-cols-2 gap-4">
                  {allReports.map(report => (
                    <ReportCard key={report.id} report={report} isAdmin={true} />
                  ))}
                </div>
              ) : (
                <Card className="p-12 text-center">
                  <FileText className="w-12 h-12 text-slate-400 mx-auto mb-3" />
                  <p className="text-slate-600">No reports have been submitted yet</p>
                </Card>
              )}
            </TabsContent>
          )}
        </Tabs>

        {showForm && (
          <Dialog open={showForm} onOpenChange={setShowForm}>
            <DialogContent className="max-w-2xl max-h-[90vh] overflow-y-auto">
              <DialogHeader>
                <DialogTitle>Submit a Report</DialogTitle>
              </DialogHeader>
              <ReportForm
                onSubmit={(data) => createReportMutation.mutate(data)}
                isSubmitting={createReportMutation.isPending}
              />
            </DialogContent>
          </Dialog>
        )}

        {selectedReport && (
          <Dialog open={!!selectedReport} onOpenChange={() => setSelectedReport(null)}>
            <DialogContent className="max-w-2xl max-h-[90vh] overflow-y-auto">
              <DialogHeader>
                <DialogTitle>Report Details</DialogTitle>
              </DialogHeader>
              <div className="space-y-4">
                <div className="flex items-center gap-2 flex-wrap">
                  <Badge className={`${severityColors[selectedReport.severity]} border font-medium`}>
                    {selectedReport.severity} severity
                  </Badge>
                  <Badge className={`${statusColors[selectedReport.status]} border font-medium`}>
                    {selectedReport.status.replace(/_/g, ' ')}
                  </Badge>
                  <span className="text-sm text-slate-500 ml-auto">
                    {format(new Date(selectedReport.created_date), "MMMM d, yyyy 'at' h:mm a")}
                  </span>
                </div>

                <div>
                  <h3 className="font-bold text-xl text-slate-900 mb-2">{selectedReport.title}</h3>
                  <p className="text-sm text-slate-500 mb-4">
                    {reportTypeLabels[selectedReport.report_type]}
                  </p>
                </div>

                <div className="bg-slate-50 border border-slate-200 rounded-lg p-4">
                  <h4 className="font-semibold text-slate-900 mb-2">Description</h4>
                  <p className="text-slate-700 whitespace-pre-wrap">{selectedReport.description}</p>
                </div>

                {selectedReport.location && (
                  <div className="bg-blue-50 border border-blue-200 rounded-lg p-4">
                    <h4 className="font-semibold text-blue-900 mb-2">Location</h4>
                    <p className="text-sm text-slate-700">{selectedReport.location.address}</p>
                  </div>
                )}

                {user?.role === 'admin' && (
                  <div className="border-t pt-4 space-y-3">
                    <h4 className="font-semibold text-slate-900">Admin Actions</h4>
                    <div className="flex gap-2 flex-wrap">
                      {selectedReport.status === 'pending' && (
                        <Button
                          onClick={() => updateReportMutation.mutate({
                            reportId: selectedReport.id,
                            updates: { status: 'under_review' }
                          })}
                          variant="outline"
                          size="sm"
                        >
                          Mark Under Review
                        </Button>
                      )}
                      {(selectedReport.status === 'pending' || selectedReport.status === 'under_review') && (
                        <>
                          <Button
                            onClick={() => updateReportMutation.mutate({
                              reportId: selectedReport.id,
                              updates: { status: 'resolved', resolved_at: new Date().toISOString() }
                            })}
                            size="sm"
                            className="bg-green-600 hover:bg-green-700"
                          >
                            Mark Resolved
                          </Button>
                          <Button
                            onClick={() => updateReportMutation.mutate({
                              reportId: selectedReport.id,
                              updates: { status: 'dismissed' }
                            })}
                            variant="outline"
                            size="sm"
                          >
                            Dismiss
                          </Button>
                        </>
                      )}
                    </div>
                  </div>
                )}
              </div>
            </DialogContent>
          </Dialog>
        )}
      </div>
    </div>
  );
}
